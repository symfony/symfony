<?xml version="1.0" ?>

<container xmlns="https://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fragment.listener.class">Symfony\Component\HttpKernel\EventListener\FragmentListener</parameter>
    </parameters>

    <services>
        <service id="fragment.listener" class="%fragment.listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="uri_signer" />
            <argument>%fragment.path%</argument>
        </service>
    </services>
</container>
