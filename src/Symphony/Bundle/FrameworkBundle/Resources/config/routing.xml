<?xml version="1.0" ?>

<container xmlns="http://symphony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symphony.com/schema/dic/services http://symphony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="router.request_context.host">localhost</parameter>
        <parameter key="router.request_context.scheme">http</parameter>
        <parameter key="router.request_context.base_url"></parameter>
    </parameters>

    <services>
        <defaults public="false" />

        <service id="routing.resolver" class="Symphony\Component\Config\Loader\LoaderResolver" />

        <service id="routing.loader.xml" class="Symphony\Component\Routing\Loader\XmlFileLoader">
            <tag name="routing.loader" />
            <argument type="service" id="file_locator" />
        </service>

        <service id="routing.loader.yml" class="Symphony\Component\Routing\Loader\YamlFileLoader">
            <tag name="routing.loader" />
            <argument type="service" id="file_locator" />
        </service>

        <service id="routing.loader.php" class="Symphony\Component\Routing\Loader\PhpFileLoader">
            <tag name="routing.loader" />
            <argument type="service" id="file_locator" />
        </service>

        <service id="routing.loader.glob" class="Symphony\Component\Routing\Loader\GlobFileLoader">
            <tag name="routing.loader" />
            <argument type="service" id="file_locator" />
        </service>

        <service id="routing.loader.directory" class="Symphony\Component\Routing\Loader\DirectoryLoader">
            <tag name="routing.loader" />
            <argument type="service" id="file_locator" />
        </service>

        <service id="routing.loader.service" class="Symphony\Component\Routing\Loader\DependencyInjection\ServiceRouterLoader">
            <tag name="routing.loader" />
            <argument type="service" id="service_container" />
        </service>

        <service id="routing.loader" class="Symphony\Bundle\FrameworkBundle\Routing\DelegatingLoader" public="true">
            <argument type="service" id="controller_name_converter" />
            <argument type="service" id="routing.resolver" />
        </service>

        <service id="router.default" class="Symphony\Bundle\FrameworkBundle\Routing\Router">
            <tag name="monolog.logger" channel="router" />
            <tag name="container.service_subscriber" id="routing.loader" />
            <argument type="service" id="Psr\Container\ContainerInterface" />
            <argument>%router.resource%</argument>
            <argument type="collection">
                <argument key="cache_dir">%kernel.cache_dir%</argument>
                <argument key="debug">%kernel.debug%</argument>
                <argument key="generator_class">Symphony\Component\Routing\Generator\UrlGenerator</argument>
                <argument key="generator_base_class">Symphony\Component\Routing\Generator\UrlGenerator</argument>
                <argument key="generator_dumper_class">Symphony\Component\Routing\Generator\Dumper\PhpGeneratorDumper</argument>
                <argument key="generator_cache_class">%router.cache_class_prefix%UrlGenerator</argument>
                <argument key="matcher_class">Symphony\Bundle\FrameworkBundle\Routing\RedirectableUrlMatcher</argument>
                <argument key="matcher_base_class">Symphony\Bundle\FrameworkBundle\Routing\RedirectableUrlMatcher</argument>
                <argument key="matcher_dumper_class">Symphony\Component\Routing\Matcher\Dumper\PhpMatcherDumper</argument>
                <argument key="matcher_cache_class">%router.cache_class_prefix%UrlMatcher</argument>
            </argument>
            <argument type="service" id="router.request_context" on-invalid="ignore" />
            <argument type="service" id="parameter_bag" on-invalid="ignore" />
            <argument type="service" id="logger" on-invalid="ignore" />
            <call method="setConfigCacheFactory">
                <argument type="service" id="config_cache_factory" />
            </call>
        </service>

        <service id="router" alias="router.default" public="true" />
        <service id="Symphony\Component\Routing\RouterInterface" alias="router" />
        <service id="Symphony\Component\Routing\Generator\UrlGeneratorInterface" alias="router" />
        <service id="Symphony\Component\Routing\Matcher\UrlMatcherInterface" alias="router" />
        <service id="Symphony\Component\Routing\RequestContextAwareInterface" alias="router" />

        <service id="router.request_context" class="Symphony\Component\Routing\RequestContext">
            <argument>%router.request_context.base_url%</argument>
            <argument>GET</argument>
            <argument>%router.request_context.host%</argument>
            <argument>%router.request_context.scheme%</argument>
            <argument>%request_listener.http_port%</argument>
            <argument>%request_listener.https_port%</argument>
        </service>
        <service id="Symphony\Component\Routing\RequestContext" alias="router.request_context" />

        <service id="router.cache_warmer" class="Symphony\Bundle\FrameworkBundle\CacheWarmer\RouterCacheWarmer">
            <tag name="container.service_subscriber" id="router" />
            <tag name="kernel.cache_warmer" />
            <argument type="service" id="Psr\Container\ContainerInterface" />
        </service>

        <service id="router_listener" class="Symphony\Component\HttpKernel\EventListener\RouterListener">
            <tag name="kernel.event_subscriber" />
            <tag name="monolog.logger" channel="request" />
            <argument type="service" id="router" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="router.request_context" on-invalid="ignore" />
            <argument type="service" id="logger" on-invalid="ignore" />
            <argument>%kernel.project_dir%</argument>
            <argument>%kernel.debug%</argument>
        </service>

        <service id="Symphony\Bundle\FrameworkBundle\Controller\RedirectController" public="true">
            <argument type="service" id="router" />
            <argument>%request_listener.http_port%</argument>
            <argument>%request_listener.https_port%</argument>
        </service>

        <service id="Symphony\Bundle\FrameworkBundle\Controller\TemplateController" public="true">
            <argument type="service" id="twig" on-invalid="ignore" />
            <argument type="service" id="templating" on-invalid="ignore" />
        </service>
    </services>
</container>
