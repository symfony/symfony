<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:framework="http://symfony.com/schema/dic/symfony"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd
                        http://symfony.com/schema/dic/symfony https://symfony.com/schema/dic/symfony/symfony-1.0.xsd">

    <framework:config http-method-override="false" handle-all-throwables="true">
        <framework:annotations enabled="false" />
        <framework:php-errors log="true" />
        <framework:access-token enabled="true">
            <framework:credentials name="my_test_provider" url="oauth://user123:pass123@example.tld?scope=DoThis"/>
            <!-- @todo We need at least two, otherwise it's not an array and test fails. -->
            <framework:credentials name="another_provider" url="oauth://user123:pass123@other.tld?scope=DoThis"/>
        </framework:access-token>
    </framework:config>
</container>
